{
  "manifest_version": 2,

  "name": "Best Buy TLC calendar import",
  "description": "Import the calendar from mytlc.bestbuy.com to Google calendar",
  "version": "1.0",
  
  "icons": { "16": "icons/icon16.png",
           "48": "icons/icon48.png",
          "128": "icons/icon128.png" },
  
  "content_scripts": [
    {
      "matches": ["https://mytlc.bestbuy.com/etm/time/timesheet/etmTnsMonth.jsp"],
      "js": ["internal/jquery.js", "internal/jparse.js"]
    }
  ],
  
  "permissions": [
	"https://mytlc.bestbuy.com/etm/time/timesheet/etmTnsMonth.jsp"
  ],
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_popup": "popup.html"
  }
  
}