{
  "manifest_version": 2,

  "name": "Best Buy TLC Calendar Import",
  "description": "Import the calendar from mytlc.bestbuy.com to Google calendar",
  "version": "1.2.2",
  "options_page": "external/options.html",
  
  "icons": { "16": "icons/icon16.png",
           "48": "icons/icon48.png",
          "128": "icons/icon128.png" },
  
  "content_scripts": [
    {
      "matches": ["https://mytlc.bestbuy.com/etm/time/timesheet/etmTnsMonth.jsp", "http://www.google.com/robots.txt*"],
      "js": ["internal/jquery.js", "internal/FileSaver.js", "internal/blobBuilder.js", "external/jparse.js"]
    }
  ],  
  
  "permissions": [
	"tabs", "http://*/*", "https://accounts.google.com/o/oauth2/token"
  ],
  
  "browser_action": {
    "default_icon": "icons/icon128.png",
    "default_popup": "external/popup.html"
  }
  
}